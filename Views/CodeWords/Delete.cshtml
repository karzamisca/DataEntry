@model DataEntryProject.Models.CodeWord

@{
    ViewData["Title"] = "Delete Code Word";
}

<h1>Delete Code Word</h1>

<h4>Code Word</h4>
<hr />
<div class="row">
    <div class="col-md-12">
        <form asp-action="Delete">
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Code" class="control-label"></label>
                <input asp-for="Code" class="form-control" disabled />
            </div>
            <div class="form-group">
                <label asp-for="Context" class="control-label"></label>
                <input asp-for="Context" class="form-control" disabled />
            </div>
            <div class="form-group">
                <input type="submit" value="Delete" class="btn btn-danger" />
                <a href="@Url.Action("Index", "CodeWords")" class="btn btn-secondary">Cancel</a>
            </div>
        </form>
    </div>
</div>
