@model IEnumerable<DataEntryProject.Models.Article>

@{
    ViewData["Title"] = "Articles List";
}

<h1>Articles List</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New Article</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Function)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CitationSource)
            </th>
            <th>
                Classification Symbol
            </th>
            <th>
                Keywords
            </th>
            <th>
                Comments
            </th>
            <th>
                Relevance
            </th>
            <th>
                Reason
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Function)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CitationSource)
                </td>
                <td>
                    @item.ClassificationSymbolSubCategory1, @item.ClassificationSymbolSubCategory2, @item.ClassificationSymbolSubCategory3
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Keywords)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Comments)
                </td>
                <td>
                    @item.RelevanceSubCategory1, @item.RelevanceSubCategory2
                </td>
                <td>
                    @item.ReasonSubCategory1, @item.ReasonSubCategory2
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning">Edit</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
